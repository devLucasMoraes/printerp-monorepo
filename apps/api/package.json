{
  "name": "@printerp/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm env:load tsx watch src/http/server.ts",
    "db:migrate": "pnpm env:load tsx ./node_modules/typeorm/cli.js -d src/database/data-source.ts migration:run",
    "db:generate": "pnpm env:load tsx ./node_modules/typeorm/cli.js -d src/database/data-source.ts migration:generate",
    "env:load": "dotenv -e ../../.env --",
    "typeorm": "tsx ./node_modules/typeorm/cli.js -d src/database/data-source.ts",
    "build": "tsup",
    "start": "node dist/http/server.js"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/jwt": "^9.1.0",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "@printerp/auth": "workspace:*",
    "@printerp/env": "workspace:*",
    "bcryptjs": "^3.0.2",
    "fastify": "^5.3.2",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.23",
    "uuid": "^11.0.5",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@printerp/eslint-config": "workspace:*",
    "@printerp/prettier": "workspace:*",
    "@printerp/tsconfig": "workspace:*",
    "@types/bcryptjs": "^3.0.0",
    "@types/node": "^22.15.3",
    "dotenv-cli": "^8.0.0",
    "tsup": "^8.5.0",
    "tsx": "^4.19.3"
  },
  "prettier": "@printerp/prettier",
  "eslintConfig": {
    "extends": [
      "@printerp/eslint-config/node"
    ]
  }
}
