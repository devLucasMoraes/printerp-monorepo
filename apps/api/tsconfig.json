{
  "extends": "@printerp/tsconfig/node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "exactOptionalPropertyTypes": false,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*",
    "@types/*.d.ts",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.*"
  ]
}